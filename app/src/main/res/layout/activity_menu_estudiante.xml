<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulBlanco"
    tools:context=".InterfazEstudiante.MenuEstudiante">

    <ImageButton
        android:id="@+id/btnPerfil"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circular_button_background"

        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/baseline_person_24"
        android:contentDescription="@string/descBotonPerfil" /> <!-- descripcion para que no de el error: No speakable text present -->

    <View
        android:id="@+id/dividerMenu"
        android:layout_width="409dp"
        android:layout_height="3dp"
        android:background="@color/azulMedio"
        android:backgroundTint="@color/azulMedio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.12" />

    <ImageButton
        android:id="@+id/btnDesconectar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/circular_button_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/baseline_power_settings_new_24"
        android:contentDescription="@string/descBotonDesconectar"/>

</androidx.constraintlayout.widget.ConstraintLayout>